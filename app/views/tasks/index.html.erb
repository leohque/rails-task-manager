<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#taskFormModal">
  Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="taskFormModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

<!-- Sticky List: -->
<div id="simpleList" class="w-100 m-2 d-flex flex-wrap justify-content-center">
  <% @tasks.each do |task| %>
    <% @colors.shuffle! %>
    <div class="sticky w-25 ml-3 mb-3 <%= @colors[0] %> list-group-item shadow">
      <div class="sticky-header d-flex justify-content-between pb-1">
        <div>
          <%= check_box_tag("check", value = true, checked = task.completed, disabled: true, class: 'm-1') %>
        </div>
        <div>
          <%= link_to task_edit_path(task) do %>
            <%= icon('fas', 'edit') %>
          <% end %>
          <%= link_to task_path(task), method: :delete, data: { confirm: "Are you sure you want to delete?" } do %>
            <%= icon('fas', 'trash-alt') %>
          <% end %>
        </div>
      </div>
      <div class="sticky-info p-4">
        <h4>
          <%= link_to "#{task.title}", task_path(task) %>
        </h4>
        <span class="task-details d-block">
          <%= task.details %>
        </span>
      </div>
    </div>
  <% end %>
</div>
<script>Sortable.create(simpleList, { /* options */ });</script>
