<h1>Task Manager</h1>
<ul>
<% @tasks.each do |task| %>
<li><%= link_to "#{task.title}", task_path(task) %>: <%= task.details %> (<%= task.completed %>)
  || <%= link_to "[ edit ]", task_edit_path(task.id) %> <%= link_to "[ delete ]", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %></li>
<% end %>
</ul>
