<h2>Title: <%= @task.title %></h2>
<h2>Details: <%= @task.details %></h2>

<%= link_to task_edit_path(@task), class: 'btn btn-success mr-2' do %>
<%= icon('fas', 'edit')%> Edit
<% end %>
<%= link_to task_path(@task), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-danger' do %>
<%= icon('fas', 'trash-alt')%> Delete
<% end %>
<br>
<%= link_to tasks_path(@task) do %>
<%= icon('fa', 'undo')%> Back to All Tasks
<% end %>
